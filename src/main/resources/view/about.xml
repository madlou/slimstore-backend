<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mongo="http://www.springframework.org/schema/data/mongo"
    xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean class="com.tjx.lew00305.slimstore.view.View" scope="prototype">
        <property name="name" value="ABOUT" />
        <property name="title" value="About" />
        <property name="message" value="Hello world!" />
        <property name="form">
            <bean class="com.tjx.lew00305.slimstore.register.Form">
                <property name="targetView" value="HOME" />
                <property name="serverProcess" value="LOGIN" />
                <property name="elements">
                    <array>
                    </array>
                </property>
            </bean>
        </property>
        <property name="functionButtons">
            <array>
                <bean class="com.tjx.lew00305.slimstore.register.FunctionButton">
                    <property name="position" value="8" />
                    <property name="label" value="Back" />
                    <property name="form">
                        <bean class="com.tjx.lew00305.slimstore.register.Form">
                            <property name="targetView" value="LOGIN" />
                        </bean>
                    </property>
                </bean>
            </array>
        </property>
    </bean>

</beans>
