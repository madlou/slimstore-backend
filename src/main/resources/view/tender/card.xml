<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:mongo="http://www.springframework.org/schema/data/mongo"
    xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean class="com.tjx.lew00305.slimstore.model.View">
        <property name="name" value="tender/card" />
        <property name="title" value="Tender Card" />
        <property name="message" value="Please enter or select a card value." />
        <property name="formSuccess" value="tender/card/ped" />
        <property name="formElements">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="decimal" />
                    <property name="key" value="amount" />
                    <property name="label" value="Amount" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="submit" />
                    <property name="value" value="Card" />
                </bean>

            </array>
        </property>
        <property name="functionButtons">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FunctionButton">
                    <property name="position" value="1" />
                    <property name="label" value="Full Amount" />
                    <property name="action" value="tender/card/ped:amount=full" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FunctionButton">
                    <property name="position" value="8" />
                    <property name="label" value="Back" />
                    <property name="action" value="tender" />
                </bean>
            </array>
        </property>
    </bean>

</beans>
