<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mongo="http://www.springframework.org/schema/data/mongo"
  xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean class="com.tjx.lew00305.slimstore.model.common.View">
        <property name="name" value="register-change" />
        <property name="title" value="Register Change" />
        <property name="message" value="Please enter your store and register details to change register." />
        <property name="formProcess" value="ChangeRegister" />
        <property name="formSuccess" value="home" />
        <property name="formElements">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.common.FormElement">
                    <property name="type" value="number" />
                    <property name="key" value="storeNumber" />
                    <property name="label" value="Store Number" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.common.FormElement">
                    <property name="type" value="number" />
                    <property name="key" value="registerNumber" />
                    <property name="label" value="Register Number" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.common.FormElement">
                    <property name="type" value="submit" />
                    <property name="value" value="Submit" />
                </bean>
            </array>
        </property>
        <property name="functionButtons">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.common.FunctionButton">
                    <property name="position" value="8" />
                    <property name="label" value="Back" />
                    <property name="action" value="system" />
                </bean>
            
            </array>
        </property>
    </bean>

</beans>
