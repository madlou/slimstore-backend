<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:mongo="http://www.springframework.org/schema/data/mongo"
  xsi:schemaLocation="http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    
    <bean class="com.tjx.lew00305.slimstore.model.Flow">
        <property name="name" value="return-manual" />
        <property name="title" value="Manual Return" />
        <property name="message" value="Please type information below." />
        <property name="formSuccess" value="return-search" />
        <property name="formElements">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="text" />
                    <property name="key" value="sku" />
                    <property name="label" value="Product Code" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="number" />
                    <property name="key" value="price" />
                    <property name="label" value="Price" />
                </bean>
                <bean class="com.tjx.lew00305.slimstore.model.FormElement">
                    <property name="type" value="submit" />
                    <property name="value" value="Enter" />
                </bean>
            </array>
        </property>
        <property name="functionButtons">
            <array>
                <bean class="com.tjx.lew00305.slimstore.model.FunctionButton">
                    <property name="position" value="8" />
                    <property name="label" value="Back" />
                    <property name="action" value="return" />   
                </bean>
            </array>
        </property>
    </bean>


</beans>

